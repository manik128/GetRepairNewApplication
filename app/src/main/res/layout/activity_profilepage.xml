<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profilepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.atss.getrepairnewapplication.Profilepage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="50dp"
    android:id="@+id/linearLayout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:src="@drawable/apartmenta"
        app:border_color="#5d95ca"
        app:border_width="3dp" />
</LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Mahi"
        android:layout_marginLeft="35dp"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/etname" />

    <TextView
        android:text="Email ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etname"
        android:layout_alignLeft="@+id/etname"
        android:layout_alignStart="@+id/etname"
        android:layout_marginTop="6dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"

        android:text="vundavalli.mahi@gmail.com"
        android:layout_below="@+id/textView8"
   android:layout_marginLeft="32dp"
 android:layout_marginRight="20dp"
        android:id="@+id/etmail" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"

        android:layout_below="@+id/etmail"

        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etphone"
            android:hint=" Phone number"

            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="8dp"

            android:layout_marginBottom="5dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Full Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_above="@+id/etname"
        android:layout_alignLeft="@+id/etname"
        android:layout_alignStart="@+id/etname"
        android:layout_marginBottom="15dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/la"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:text="Logout"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:windowSoftInputMode="stateHidden"
            android:textColor="#ffffff"
            android:background="#0077A4"/>
    </LinearLayout>


</RelativeLayout>
