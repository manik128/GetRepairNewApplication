<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="5dip" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="3"
        android:id="@+id/linear2">

        <TextView
            android:id="@+id/tvnumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="15dp"
            android:text="Duty Shift    :"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tvfloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:text="4hrs"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   android:layout_below="@+id/linear2"
        android:weightSum="3"

        android:id="@+id/linear3">

        <TextView
            android:id="@+id/tvtell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="15dp"
            android:text="Qty                :"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvbudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="20"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3"
        android:weightSum="3"

        android:id="@+id/linear4">

        <TextView
            android:id="@+id/tvintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="15dp"
            android:text="Intime           :"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvtime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="20"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear4"
        android:weightSum="3"

        android:id="@+id/linear5">

        <TextView
            android:id="@+id/tvouttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="15dp"
            android:text="outtime         :"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="20"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear5"
        android:weightSum="3"

        android:id="@+id/linear6">

        <TextView
            android:id="@+id/tvservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="15dp"
            android:text="Service Type:"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="20"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear6"
        android:weightSum="3"

        android:id="@+id/linear7">

        <TextView
            android:id="@+id/tvweekoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="15dp"
            android:text="No.of Weekof:"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="20"
            android:textColor="#1d1d1d"

            android:textSize="16dp"
            />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear7"
    android:weightSum="3"
    android:layout_marginTop="10dp"
    android:id="@+id/linear">
    <TextView
        android:id="@+id/legendBorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlegendName"
        android:textColor="#1d1d1d"
        android:textSize="15dip"
        android:layout_marginLeft="15dp"
        android:text="cars"
        android:layout_weight="0.5"
        android:layout_marginTop="1dip"
          />
    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="15dip"
        android:textColor="#1d1d1d"
        android:layout_weight="0.2" />

    <TextView
        android:text="BMW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvbrand"
        android:textSize="15dip"
        android:textColor="#1d1d1d"
        android:layout_weight="1" />


</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repair"
        android:textColor="#1d1d1d"
        android:id="@+id/tvprice"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/linear"


        android:layout_marginTop="5dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDAD8D8"
        android:layout_below="@+id/tvprice"

        android:id="@+id/tvline"
        android:layout_marginTop="10dp"

        />
</RelativeLayout>