<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E9E9E9"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicing"

            android:background="#fff"
            android:paddingLeft="35dp"
            android:layout_marginTop="1dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:id="@+id/tvaudi"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repairs"

            android:background="#fff"
            android:layout_below="@+id/tvaudi"
            android:paddingLeft="35dp"
            android:layout_marginTop="1dp"

            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/tvbmw"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakdown"

            android:background="#fff"
            android:paddingLeft="35dp"
            android:layout_marginTop="1dp"

            android:layout_below="@+id/tvbmw"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/tvhonda"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inspection"

            android:background="#fff"
            android:paddingLeft="35dp"
            android:layout_below="@+id/tvhonda"
            android:layout_marginTop="1dp"

            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/tvtoyota"
            />
    </RelativeLayout>
</RelativeLayout>